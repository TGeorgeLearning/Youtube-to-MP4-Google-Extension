{
  "manifest_version": 3,
  "name": "YouTube to MP3 Downloader",
  "version": "1.0",
  "description": "Download YouTube videos as MP3 files",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  }
}
